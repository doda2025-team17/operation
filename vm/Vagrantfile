# -*- mode: ruby -*-
# vi: set ft=ruby :

# Configurable number of worker nodes
NUM_WORKERS = 2

Vagrant.configure("2") do |config|
  # Base box for all VMs
  config.vm.box = "bento/ubuntu-24.04"
  config.vm.boot_timeout = 300  # 5 minutes for initial boot

  # Control Node Configuration
  config.vm.define "ctrl" do |ctrl|
    ctrl.vm.hostname = "ctrl"
    
    # Host-only network for internal cluster communication
    # Fixed IP as per assignment requirements
    ctrl.vm.network "private_network", ip: "192.168.56.100"
    
    # VirtualBox specific settings
    ctrl.vm.provider "virtualbox" do |vb|
      vb.name = "k8s-ctrl"
      vb.memory = "4096"
      vb.cpus = 1
    end
    
    # Common provisioning first
    ctrl.vm.provision "ansible_local" do |ansible|
      ansible.playbook = "ansible/general.yaml"
      ansible.extra_vars = { 
        hostname: "ctrl",
        num_workers: NUM_WORKERS
      }
    end
    
    # Then control-specific provisioning
    ctrl.vm.provision "ansible_local" do |ansible|
      ansible.playbook = "ansible/ctrl.yaml"
    end
  end

  # Worker Nodes Configuration
  (1..NUM_WORKERS).each do |i|
    config.vm.define "node-#{i}" do |node|
      node.vm.hostname = "node-#{i}"
      
      # Host-only network - sequential IPs starting from .101
      # Fixed IPs as per assignment requirements
      node.vm.network "private_network", ip: "192.168.56.#{100 + i}"
      
      # VirtualBox specific settings
      node.vm.provider "virtualbox" do |vb|
        vb.name = "k8s-node-#{i}"
        vb.memory = "6144"
        vb.cpus = 2
      end
      
      # Common provisioning first
      node.vm.provision "ansible_local" do |ansible|
        ansible.playbook = "ansible/general.yaml"
        ansible.extra_vars = { 
          hostname: "node-#{i}",
          num_workers: NUM_WORKERS
        }
      end
      
      # Then node-specific provisioning
      node.vm.provision "ansible_local" do |ansible|
        ansible.playbook = "ansible/node.yaml"
      end
    end
  end
end