# -*- mode: ruby -*-
# vi: set ft=ruby :

# Configurable variables
NUM_WORKERS = 2
CTRL_CPU = 1
NODE_CPU = 2
CTRL_MEMORY = "4096"
NODE_MEMORY = "6144"

Vagrant.configure("2") do |config|
  # Base box for all VMs
  config.vm.box = "bento/ubuntu-24.04"
  config.vm.boot_timeout = 300  # 5 minutes for initial boot

  # Control Node Configuration
  config.vm.define "ctrl" do |ctrl|
    ctrl.vm.hostname = "ctrl"
    
    # Host-only network for internal cluster communication
    # Fixed IP as per assignment requirements
    ctrl.vm.network "private_network", ip: "192.168.56.100", virtualbox__hostonlyadapter: "VirtualBox Host-Only Ethernet Adapter #2"
    
    # VirtualBox specific settings
    ctrl.vm.provider "virtualbox" do |vb|
      vb.name = "k8s-ctrl"
      vb.memory = CTRL_MEMORY
      vb.cpus = CTRL_CPU
    end
    
    # Common provisioning first
    ctrl.vm.provision "ansible_local" do |ansible|
      ansible.playbook = "ansible/general.yaml"
      ansible.extra_vars = { 
        hostname: "ctrl",
        num_workers: NUM_WORKERS
      }
    end
    
    # Then control-specific provisioning
    ctrl.vm.provision "ansible_local" do |ansible|
      ansible.playbook = "ansible/ctrl.yaml"
    end
    ctrl.vm.provision "ansible_local" do |ansible|
        ansible.playbook = "ansible/finalization.yaml"
    end
  end

  # Worker Nodes Configuration
  (1..NUM_WORKERS).each do |i|
    config.vm.define "node-#{i}" do |node|
      node.vm.hostname = "node-#{i}"
      
      # Host-only network - sequential IPs starting from .101
      # Fixed IPs as per assignment requirements
      node.vm.network "private_network", ip: "192.168.56.#{100 + i}", virtualbox__hostonlyadapter: "VirtualBox Host-Only Ethernet Adapter #2"
      
      # VirtualBox specific settings
      node.vm.provider "virtualbox" do |vb|
        vb.name = "k8s-node-#{i}"
        vb.memory = NODE_MEMORY
        vb.cpus = NODE_CPU
      end
      
      # Common provisioning first
      node.vm.provision "ansible_local" do |ansible|
        ansible.playbook = "ansible/general.yaml"
        ansible.extra_vars = { 
          hostname: "node-#{i}",
          num_workers: NUM_WORKERS
        }
      end
      
      # Then node-specific provisioning
      node.vm.provision "ansible_local" do |ansible|
        ansible.playbook = "ansible/node.yaml"
      end
    end
  end

  config.trigger.after :up do |trigger|
    trigger.name = "Generate Ansible Inventory"
    trigger.info = "Generating inventory.cfg file with all active nodes"
    
    # Build workers section
    workers = []
    (1..NUM_WORKERS).each do |i|
      workers << "node-#{i} ansible_host=192.168.56.#{100 + i} ansible_user=vagrant"
    end
    
    inventory_content = <<~EOF
[control_plane]
ctrl ansible_host=192.168.56.100 ansible_user=vagrant

[workers]
#{workers.join("\n")}

[k8s_cluster:children]
control_plane
workers

[all:vars]
ansible_ssh_common_args='-o StrictHostKeyChecking=no'
EOF
    
    # Write to file on host machine
    File.write("inventory.cfg", inventory_content)
    puts "Generated inventory.cfg with #{NUM_WORKERS} worker nodes"
  end
end